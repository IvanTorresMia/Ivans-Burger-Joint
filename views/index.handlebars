<h1>Burgers!</h1>

<img src="../assets/image-asset.jpg" class="img-fluid" alt="Responsive image">

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="new-burger">Burger Name:</label>
    <input type="text" id="new-burger" name="burger_name">
  </div>


  <div class="form-group">
    <label for="devoured">Hungry?</label><br>
    <input type="radio" name="devoured" value="0" checked> hungry!<br>
    <input type="radio" name="devoured" value="1"> Full!
  </div>


  <button type="submit">Add Burger</button>
</form>




<div class="row ml-6 justify-content-center">
  <div class="col-sm-4">
    
<h2>Ready to eat burgers!!</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>
 </div>
    


  <div class="col-sm-4">
  
<h2>burgers I ate!</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>
 </div>
   
  </div>


